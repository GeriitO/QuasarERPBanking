@model QuasarERPBanking.Models.INV_TIPO


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="internal-window bg-light">
        <div class="form--section-title col-md-12">
            <div class="col-md-6 internal--title">
                <h2 class="internal--title-h2">Crear Tipo de producto</h2>
            </div>
            <div class="col-md-6 icon-bar">
                <ul class="list-unstyled d-flex justify-content-end">
                    <li class="icon--bar-exit">
                        <a href="/">
                            <img src="~/Content/imagenes/icon-door_open_exit.svg" width="24" height="24" />
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="form-control mt-3">
            <div class="row">
                <div class="col">
                    @Html.LabelFor(model => model.INVTIPCOD, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.INVTIPCOD, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.INVTIPCOD, "", new { @class = "text-danger" })
                </div>
                <div class="col">
                    @Html.LabelFor(model => model.INVTIPDES, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.INVTIPDES, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.INVTIPDES, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group ParrGridActInt">
                <div class="imagenesActivosFijosTipos">
                    <div class="imagenActFijoTipos1">
                        <input type="image" class="input-image" title="" src="~/Content/imagenes/check-circle.png" />
                        <div class="crear-activofijo">
                            <label>@Resources.StringResources.GlobalButtonNew</label>
                        </div>
                    </div>
                    <div class="imagenActFijoTipos2">
                        <img src="~/Content/imagenes/icon-arrow-return-left.svg" class="return-img" alt="Buscar" title="" onclick="window.location.href = '/INV_TIPO'" style="width:30px; cursor:pointer" />
                        <div class="retornar-activofijo">
                            <label>@Resources.StringResources.MantVolverList</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>
}

<script src="@Url.Content("~/scripts/Funciones.js")" type="text/javascript"></script>

<script type="text/javascript">
    $("#INVTIPCOD").numericInput();

</script>