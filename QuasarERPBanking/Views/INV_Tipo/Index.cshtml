@model IEnumerable<QuasarERPBanking.Models.INV_TIPO>
<div class="internal-window bg-light">
    <div class="form--section-title col-md-12">
        <div class="col-md-6 internal--title">
            <h2 class="internal--title-h2">@Resources.Inventario.StringResources.TittleVentana</h2>
        </div>
        <div class="col-md-6 icon-bar">
            <ul class="list-unstyled d-flex justify-content-end">
                <li class="icon--bar-create">
                    <a href="#" id="nuevo" onclick="crear();">
                        <img src="~/Content/imagenes/icon-add.svg" title="@Resources.StringResources.GlobalButtonNew" onclick="window.location.href = '/ActivoFijoTipo/Create';" alt="Nuevo" width="20" height="24" />
