                </li>
            </ul>
        </div>
    </div>
    <button class="btn quasar-button-color my-2">
        @Html.ActionLink(Resources.StringResources.MantCrear, "Create")
    </button>
        <table class="table table-hover table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.INVTIPCOD)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.INVTIPDES)
                </th>
                <th>
                    @Resources.MANTENIMIENTO.StringResources.lblAccion
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.INVTIPCOD)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.INVTIPDES)
                    </td>
                    <td>
                        @Html.ActionLink(Resources.StringResources.MantEditar, "Edit", new { id = item.INVTIPCOD }) |

                        @Html.ActionLink(Resources.StringResources.MantEliminar, "Delete", new { id = item.INVTIPCOD })
