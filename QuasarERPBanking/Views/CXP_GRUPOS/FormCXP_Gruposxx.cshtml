        $("#INVSEL").prop('disabled', false);
        $("#INVTPOPERS").prop('disabled', false);
        $("#INVGRUPO").prop('disabled', false);
        $("#INVITF").prop('disabled', false);
        $("#INVCATEGORIA").prop('disabled', false);
        $("#INVTIMBRE").prop('disabled', false);
