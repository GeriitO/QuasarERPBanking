                    @Html.TextBoxFor(model => model.INVFAX, new { style = "size=40" })
                </td>
                <td><label>Relacion</label></td>
                <td>
                    @Html.DropDownListFor(model => model.INVRELAC, ((IEnumerable<INV_RELAC>)lstRelac)/*For(model => model.INVRELAC,*/
