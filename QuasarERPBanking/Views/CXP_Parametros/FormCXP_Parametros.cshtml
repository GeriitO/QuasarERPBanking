                                    grid.Columns(
                //grid.Column("Asociar", format: item => @Html.CheckBox("Active", (bool)((item.PREPROCOD == ViewBag.ProyectoSeleccionado) ? true : false), new { value = @item.PREPART, @onclick = "active(this)" }), style: "colDescWidth", canSort: false),
