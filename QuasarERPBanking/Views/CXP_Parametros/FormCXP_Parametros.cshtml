                grid.Column("ACT_ASUNTO", Resources.CXP_PARAMETROS.StringResources.lblIntMG.Replace(":", ""), format: @<text> <span class="display-mode"> <label id="lblDET_PLAN1">@item.ACT_ASUNTO.ToString(@*"n", culture*@)</label> </span>  @*<input type="text" id="DET_PLAN1" value="@item.PRECOST1" onkeypress="return NumCheck(event, this)" class="edit-mode" />*@ </text>, style: "codigos", canSort: false),
