    $(function () {
        // DATEPICKER
        loadDatePicker();
        $.datepicker.setDefaults($.datepicker.regional["@QuasarERPBanking.Models.ParametrosGlobales.culture"]);
        $('.datepicker').datepicker(
        {
            format: 'dd/mm/yy',
            startDate: '-3d',
            onSelect: function () {
                //return $(this).trigger('change');
                //alert("prueba");
            }
        }); //Initialise any date pickers
    })
</script>